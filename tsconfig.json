{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "types": [
      "vite/client"
    ],
    "baseUrl": "./",
    "paths": {
      "~/*" : ["./src/*"]
    }
  },
  "exclude": [
    "**/node_modules/**/*",
    "public/**/*",
    "dist/**/*",
  ],
}
